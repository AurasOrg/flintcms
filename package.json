{
  "name": "flint",
  "version": "1.0.0",
  "description": "NodeJS CMS",
  "main": "server/index.js",
  "author": "Jason Etcovitch",
  "license": "MIT",
  "engines": {
    "node": "7.4.0",
    "npm": "4.0.5"
  },
  "scripts": {
    "start": "nodemon --ignore app server/index.js",
    "build": "rimraf dashboard && cross-env NODE_ENV=production webpack --config ./config/webpack.production.config.js --progress --profile --colors"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-devshelf"
    ],
    "rules": {
      "color-named": "always-where-possible",
      "declaration-block-semicolon-newline-after": "always-multi-line",
      "declaration-block-single-line-max-declarations": 3,
      "at-rule-empty-line-before": "never"
    }
  },
  "dependencies": {
    "autoprefixer": "^6.7.0",
    "babel-core": "^6.22.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-polyfill": "^6.22.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.22.0",
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.16.0",
    "classnames": "^2.2.5",
    "compression": "^1.6.2",
    "cookie-parser": "^1.4.3",
    "cookie-session": "^2.0.0-alpha.2",
    "copy-webpack-plugin": "^4.0.1",
    "cross-env": "^3.1.4",
    "css-loader": "^0.26.1",
    "dotenv": "^4.0.0",
    "es6-promise": "^4.0.5",
    "express": "^4.14.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "form-serialize": "^0.7.1",
    "handlebars": "^4.0.6",
    "html-webpack-plugin": "^2.28.0",
    "immutability-helper": "^2.1.1",
    "isomorphic-fetch": "^2.2.1",
    "moment": "^2.17.1",
    "mongoose": "^4.8.0",
    "morgan": "^1.8.0",
    "node-sass": "^4.4.0",
    "nodemon": "^1.11.0",
    "passport": "^0.3.2",
    "passport-local": "^1.0.0",
    "postcss-loader": "^1.2.2",
    "react": "^15.4.2",
    "react-color": "^2.11.1",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.2",
    "react-router": "^3.0.2",
    "react-router-redux": "^4.0.7",
    "react-transform-hmr": "^1.0.4",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0",
    "resolve-url-loader": "^1.6.1",
    "rimraf": "^2.5.4",
    "sass-loader": "^4.1.1",
    "socket.io": "^1.7.2",
    "socket.io-client": "^1.7.2",
    "style-loader": "^0.13.1",
    "webpack": "^1.14.0",
    "webpack-dev-middleware": "^1.9.0",
    "webpack-hot-middleware": "^2.15.0"
  },
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "eslint": "^3.14.1",
    "eslint-config-airbnb": "^14.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.2",
    "eslint-plugin-react": "^6.9.0",
    "jest": "^18.1.0",
    "stylelint": "^7.7.1",
    "stylelint-config-devshelf": "^1.2.0",
    "stylelint-scss": "^1.4.1"
  }
}
